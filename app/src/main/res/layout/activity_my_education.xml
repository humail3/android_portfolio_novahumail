<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.Humail.novahumail.MyEducation">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_android_app_dev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/btn_background_rectangle_gradient"
        android:drawableLeft="@drawable/baseline_double_arrow_24"
        android:drawablePadding="20dp"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="Android Native App Development"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/Secondary"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tv_contact_us_page"
        app:layout_constraintTop_toBottomOf="@+id/btn_matric_in_science">

    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_web_dev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/btn_background_rectangle_gradient"
        android:drawableLeft="@drawable/baseline_double_arrow_24"
        android:drawablePadding="20dp"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="Website Development using WordPress"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/Secondary"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tv_contact_us_page"
        app:layout_constraintTop_toBottomOf="@+id/btn_android_app_dev">

    </androidx.appcompat.widget.AppCompatButton>

    <TextView
        android:id="@+id/tv_skills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/black_stroke_round_corner_bg"
        android:padding="5dp"
        android:text="Skills :"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/btn_android_app_dev"
        app:layout_constraintStart_toStartOf="@+id/btn_android_app_dev" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_win_form_app_dev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/btn_background_rectangle_gradient"
        android:drawableLeft="@drawable/baseline_double_arrow_24"
        android:drawablePadding="20dp"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
